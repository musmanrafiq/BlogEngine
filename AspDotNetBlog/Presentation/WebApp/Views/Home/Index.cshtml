@model IEnumerable<BlogEngine.Business.Models.PostModel>


<h1 class="title">Latest</h1>
<hr />

<div class="columns">
    <div class="column is-9">
        @if(!Model.Any()){
            <div>0 Posts found!</div>
        }
        @foreach (var post in Model)
        {
            <div class="card">
                <div class="card-content">
                    <p class="title is-5">
                        @post.Title
                    </p>
                    <p class="subtitle is-6">
                        @post.Content
                    </p>
                </div>
            </div>
        }
    </div>

    <div class="column">
        <form asp-action="Search">
            <div class="field">
                <label class="label">Your Search</label>
                <div class="control">
                    <input class="input" type="text" name="query" placeholder="find posts ...">
                </div>
            </div>

            <div class="control">
                <button class="button is-link">Search</button>
            </div>
        </form>
    </div>

</div>